{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <b><p>Catégorie: </b>{{ program.category.name }}</p>

            {% for season in program.seasons %}
            <b><p>Saison:</b> {{ season.number }}</p>
            <b><p>Année:</b> {{ season.year }}</p>
            <b><p>Description:</b> <br> {{ season.description }}</p>
            <a href="{{ path('program_season_show', {'programId': program.id, 'seasonId': season.id}) }}">Lien vers la saison</a>
            <hr>
            
            
            {% endfor %}

        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}